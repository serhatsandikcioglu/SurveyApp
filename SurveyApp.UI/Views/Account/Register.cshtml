@model RegisterDTO
<div class="text-center my-5">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <h6 class="display-6"><i class="fa solid fa-user-plus text-white bg-secondary p-3"></i><br />Register</h6>
</div>
<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <div>
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>
        <form method="post" asp-action="Register">
            <div class="form-group my-3">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="Surname"></label>
                <input asp-for="Surname" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="EMail"></label>
                <input asp-for="EMail" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="Password"></label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group my-3">
                <label asp-for="PasswordAgain"></label>
                <input type="password" asp-for="PasswordAgain" class="form-control" />
            </div>
            <div class="form-group my-3 d-flex justify-content-center">
                <button type="submit" class="btn btn-primary"><i class="fa solid fa-user-plus"></i> Register</button>
            </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>
