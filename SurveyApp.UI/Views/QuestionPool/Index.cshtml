@model List<QuestionDTO>

@section Styles {
    <link rel="stylesheet" href="~/css/question-pool.css" />
}

<div class="question-pool-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 mb-0">
            <i class="bi bi-collection-fill text-primary me-2"></i>
            Question Pool
        </h1>
        <a class="btn btn-primary d-flex align-items-center" asp-action="SendRequest">
            <i class="bi bi-plus-circle me-2"></i>
            Add New Question
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-clipboard-x"></i>
            <p>No questions available</p>
            <small>Start by adding some questions to your pool</small>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">Question</th>
                            <th class="border-0">Choices</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var question in Model)
                        {
                            <tr>
                                <td class="align-middle">@question.Text</td>
                                <td class="align-middle">
                                    <ul class="choice-list mb-0">
                                        @foreach (var choice in question.Choices)
                                        {
                                            <li>
                                                <i class="bi bi-record-circle me-2 text-primary"></i>
                                                @choice
                                            </li>
                                        }
                                    </ul>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>