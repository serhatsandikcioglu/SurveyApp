@{
    Layout = "_Layout";
}
@model List<QuestionDTO>
<div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <div class="display-6">Questions</div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Question</th>
                <th>Choices</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var question in Model)
            {
                <tr>
                    <td class="text-center">@question.Text</td>
                    <td class="left-align">
                        <ul>
                            @foreach (var choice in question.Choices)
                            {
                                <li>@choice</li>
                            }
                        </ul>
                    </td>
                    <td>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
        <div class="btn-group">
            <a class="btn btn-outline-success" asp-action="SendRequest">
                <i class="fa fa-plus"></i>
                Send Request To Add Question
            </a>
        </div>
</div>