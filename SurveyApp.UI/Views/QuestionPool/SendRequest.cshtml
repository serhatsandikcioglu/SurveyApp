@model QuestionDTO
<div class="text-center">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <div class="display-6">Create Question</div>

</div>
<form method="post" asp-action="SendRequest">

    <div class="text-danger" asp-validation-summary="All"></div>
    <div class="form-group my-3">
        <label asp-for="Text"></label>
        <input asp-for="Text" class="form-control" placeholder="Question Text" />
    </div>
    <div class="form-group my-3">
        <label asp-for="Choices"></label>
        <input asp-for="Choices" class="form-control" placeholder="First Choice" />
    </div>
    <div class="form-group my-3">
        <input asp-for="Choices" class="form-control" placeholder="Second Choice" />
    </div>
    <div class="form-group my-3">
        <input asp-for="Choices" class="form-control" placeholder="Third Choice" />
    </div>
    <div class="form-group my-3">
        <input asp-for="Choices" class="form-control" placeholder="Fourth Choice" />
    </div>
    <div class="form-group my-3">
        <input asp-for="Choices" class="form-control" placeholder="Fifth Choice" />
    </div>
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Send</button>
            <a asp-action="Index" class="btn btn-outline-primary"><i class="fa fa-list"></i> Back</a>
        </div>
    </div>
</form>