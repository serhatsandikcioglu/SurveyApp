@using SurveyApp.Data.DTO_s
@model List<QuestionDTO>
@{
    ViewData["Title"] = "Home Page";
}

<table class=" table table-bordered">
    <tr>
        <th>Employee Name</th>
        <th>Employee Surname</th>
        <th>Employee Title</th>
        <th></th>
    </tr>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Text</td>
                <td>@foreach (var item in question.Choices)
                    {
                        @item;
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Home/CreateEmployee/" class=" btn btn-primary">Create Employee</a>
