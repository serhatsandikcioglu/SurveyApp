@model List<ScoreDTO>
<div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <div class="display-6">Survey Results</div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Name</th>
                <th>Surname</th>
                <th>Correct Answer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var score in Model)
            {
                <tr>
                    <td class="left-align">@score.Name</td>
                    <td class="left-align">
                        @score.Surname
                    </td>
                    <td class="left-align">
                        @score.NumberOfCorrectAnswer / @score.Survey.QuestionsId.Count
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>