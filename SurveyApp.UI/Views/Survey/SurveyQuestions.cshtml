@model List<QuestionDTO>
<form method="post" action="Index">
<div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <div class="display-6">Questions</div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Question</th>
                <th>Choices</th>
            </tr>
        </thead>
        <tbody>
                @if (User.Identity.IsAuthenticated)
                {
                    @foreach (var question in Model)
                    {
                        <tr>
                            <td class="text-center">@question.Text</td>
                            <td class="left-align">
                                <ul>
                                    @foreach (var choice in question.Choices)
                                    {
                                        <li>@choice</li>
                                    }
                                </ul>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="selectedQuestions" value="@question.Id" />
                                    <label class="form-check-label" for="selectedQuestions"> Select</label>
                                </div>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    @foreach (var question in Model.Take(10))
                    {
                        <tr>
                            <td class="text-center">@question.Text</td>
                            <td class="left-align">
                                <ul>
                                    @foreach (var choice in question.Choices)
                                    {
                                        <li>@choice</li>
                                    }
                                </ul>
                            </td>
                            <td>
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" name="selectedQuestions" value="@question.Id" />

                                    <label class="form-check-label" for="selectedQuestions"> Select</label>
                                </div>

                            </td>
                        </tr>
                    }
                }

        </tbody>
    </table>
