@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <li class="navbar-nav">
        <a class="nav-link" area-current="page" asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fa-solid fa-gear"></i> Admin</a>
    </li>
}
@if (User.Identity.IsAuthenticated && User.IsInRole("User"))
{
    <li class="navbar-nav">
        <a class="nav-link" area-current="page" asp-area="" asp-controller="Survey" asp-action="UserScore"><i class="fa fa-list"></i> My Surveys</a>
    </li>
}

@if (User.Identity.IsAuthenticated)
{
    <li class="navbar-nav">
        <a class="nav-link" area-current="page" asp-area="" asp-controller="account" asp-action="Logout"><i class="fa fa-solid fa-right-from-bracket"></i> Logout</a>
    </li>
}
else
{
<li class="navbar-nav">
        <a class="nav-link" area-current="page" asp-area="" asp-controller="account" asp-action="Login"><i class="fa fa-solid fa-right-from-bracket"></i> Login</a>
</li>
    
