@{
    Layout = "_Layout";
}
@model List<QuestionDTO>
<div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <div class="display-6">Question Requests</div>
    <div class="d-flex justify-content-end my-3">
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Question</th>
                    <th>Choices</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var question in Model)
                {
                    <tr>
                        <td class="text-center">@question.Text</td>
                        <td class="left-align">
                            <ul>
                                @foreach (var choice in question.Choices)
                                {
                                    <li>@choice</li>
                                }
                            </ul>
                        </td>
                        <td>
                            <div class="btn-group">
                                <a class="btn btn-success" asp-action="UpdateQuestion" asp-route-id="@question.Id">
                                    <i class="fa fa-plus"></i>
                                    Add To Pool
                                </a>

                                <a class="btn btn-danger" asp-action="DeleteQuestion" asp-route-id="@question.Id">
                                    onclick="return confirm('Bu soruyu silmek istediğinize emin misiniz?');">
                                    <i class="fa fa-trash"></i>
                                    Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info text-center">
            <i class="fa fa-info-circle"></i> Soru talebi bulunmamaktadır.
        </div>
    }
</div>