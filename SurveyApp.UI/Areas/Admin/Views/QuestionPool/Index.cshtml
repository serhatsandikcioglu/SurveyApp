@{
    Layout = "_Layout";
}
@model List<QuestionDTO>
<div>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <div class="display-6">Questions</div>
    <div class="d-flex justify-content-end my-3">
        <a class="btn btn-outline-success" asp-action="CreateQuestion">
            <i class="fa fa-plus"></i>
            Create Question
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Question</th>
                <th>Choices</th>
                <th>Operations</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var question in Model)
            {
                <tr>
                    <td class="text-center">@question.Text</td>
                    <td class="left-align">
                        <ul>
                        @foreach (var choice in question.Choices)
                        {
                                <li>@choice</li>
                        }
                        </ul>
                </td>
            <td>
                <div class="btn-group">
                            <a class="btn btn-warning" asp-action="UpdateQuestion" asp-route-id="@question.Id">
                                <i class="fa fa-edit"></i>
                                Edit</a>

                            <a class="btn btn-danger" asp-action="DeleteQuestion" asp-route-id="@question.Id">
                                <i class="fa fa-trash"></i>
                                Delete</a>
                </div>
            </td>
            </tr>
            }
        </tbody>
    </table>
</div>