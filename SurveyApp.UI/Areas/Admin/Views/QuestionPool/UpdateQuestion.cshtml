@model QuestionDTO
<div class="text-center">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <div class="display-6">Create Question</div>

</div>
<form method="post" asp-action="UpdateQuestion">
    <div class="text-danger" asp-validation-summary="All"></div>
    <input type="hidden" asp-for="Id" />
    
        <label asp-for="Text"></label>
    <div class="form-group my-3">
        <input asp-for="Text" class="form-control" placeholder="Question Text"/>
    </div>
        <label asp-for="Choices"></label>
    @for (var i = 0; i < Model.Choices.Count; i++)
    {
        <div class="form-group my-3">
            <input asp-for="Choices[i]" class="form-control" placeholder="Choice" />
        </div>
    }
    <div class="form-group my-3">
        <div class="btn-group">
            <button class="btn btn-primary" type="submit"><i class="fa fa-save"></i> Update</button> 
            <a asp-action="Index" class="btn btn-outline-primary"><i class="fa fa-list"></i> Back</a>
    </div>
    </div>
</form>